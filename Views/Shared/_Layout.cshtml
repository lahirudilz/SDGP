<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | susFaceGen</title>
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/susFaceGen.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <div class="d-flex">
                        <img src="~/images/susFaceGenLogo.webp" width="33" height="33" alt="susFaceGen Logo" class="me-1 d-none d-md-block">
                        <span>susFaceGen</span>
                    </div> 
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <div class="mx-auto">
                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Statement" asp-action="GenerateImage">Generate Image</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Statement" asp-action="Recents">Recents</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                            </li>
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" id="register" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div style="width: 250px">
                        <hr class="text-secondary border-1 d-sm-none w-100" />
                        <ul class="navbar-nav float-sm-end">
                            <li class="nav-item m-sm-0 mt-2">
                                <partial name="_LoginPartial" />
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

    </header>
    <div class="container content">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container text-center">
            &copy; 2024 - susFaceGen
        </div>
    </footer>

    <div id="pageLoading">
        <div class="spinner-grow position-absolute top-50 start-50 translate-middle text-white" role="status" style="height: 5rem; width: 5rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/683a59f20e.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ once: true, });
    </script>
    

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(window).on('beforeunload', function () {
            $('#pageLoading').show();
        });
        $(window).on('load', function () {
            $('#pageLoading').fadeOut();
        });
    </script>
</body>
</html>
