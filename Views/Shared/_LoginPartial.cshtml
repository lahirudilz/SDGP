@using Microsoft.AspNetCore.Identity
@using susFaceGen.Areas.Identity.Data

@inject SignInManager<susFaceGenUser> SignInManager
@inject UserManager<susFaceGenUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item mb-sm-0 mb-2 me-2">
            <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
    </li>
        
    <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-danger text-light">Logout</button>
            </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
    
</ul>
